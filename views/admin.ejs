<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <h1>Transaction Tracker</h1>
    <h2>Total Balance: <span id="total-balance">
            <%= totalBalance %>
        </span></h2>
    <h2><a href="./">view</a></h2>

    <div class="transaction-table-container">
        <table class="transaction-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Total</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% let runningTotal=0; %>
                    <% transactions.forEach((transaction,index)=> { %>
                        <% if (transaction.type==="income" ) { runningTotal +=transaction.amount; } else { runningTotal
                            -=transaction.amount; } %>
                            <tr class="<%= transaction.type === 'income' ? 'income' : 'expense' %>">
                                <td>
                                    <%= (index + 1) %>. <%= transaction.name %>
                                </td>
                                <td>
                                    <%= transaction.amount %>
                                </td>
                                <td>
                                    <%= transaction.type %>
                                </td>
                                <td>
                                    <%= runningTotal %>
                                </td>
                                <td>
                                    <%= new Date(transaction.createdAt).toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= new Date(transaction.createdAt).toLocaleTimeString() %>
                                </td>
                                <td><button class="delete-btn" data-id="<%= transaction._id %>">‚ùå</button></td>
                            </tr>
                            <% }); %>
            </tbody>
        </table>
    </div>

    <form id="transaction-form">
        <input type="text" id="name" placeholder="Transaction Name" required>
        <input type="number" id="amount" placeholder="Amount" required>
        <select id="type">
            <option value="income">Income</option>
            <option value="expense">Expense</option>
        </select>
        <button type="submit">Add</button>
    </form>

    <script src="/js/script.js"></script>
</body>

</html>